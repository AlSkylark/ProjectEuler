<UserControl x:Class="EulerWPF.listControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EulerWPF"
             mc:Ignorable="d" Width="1319" Height="156.303">
    <Grid Margin="0,0,0,0" HorizontalAlignment="Left" Width="1319">
        <Border x:Name="proBorder" BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0,0,0,0" Width="1255" Height="128" VerticalAlignment="Bottom">
            <Image HorizontalAlignment="Left" Height="45" Margin="1165,70,0,0" VerticalAlignment="Top" Width="38" Source="res/bin.png"/>
        </Border>

        <Image x:Name="proImg" HorizontalAlignment="Left" Height="110" Margin="42,46,0,0" VerticalAlignment="Top" Width="102" Source="res/file.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="proNumber" Content ="{Binding Number}"  HorizontalAlignment="Left" Height="82" Margin="158,56,0,0" VerticalAlignment="Top" Width="238" FontSize="48" Background="{x:Null}" BorderBrush="{x:Null}"></Label>
        <Label x:Name="proTitle" Content="{Binding Title}"  HorizontalAlignment="Left" Height="60" Margin="401,69,-299,0" VerticalAlignment="Top" Width="698" FontSize="36" BorderBrush="{x:Null}" Background="{x:Null}"/>

    </Grid>
</UserControl>
